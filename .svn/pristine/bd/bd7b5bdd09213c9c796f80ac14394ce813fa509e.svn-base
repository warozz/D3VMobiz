steps {
    .boxStatusStep .oneStep a span {
        display: block;
        width: 200px;
        position: absolute;
        left: -100px;
        top: 0px;
        font-weight: 500;
        color: #666;
        padding-top: 31px;
    }
    .boxStatusStep {
        .oneStep {
            cursor: pointer;
            a {
                i {
                    width: 40px;
                    height: 40px;
                    line-height: 40px;
                    border-radius: 50%;
                    top: -7px;
                    left: -20px;
                }
                span {
                    top: 10px;
                }
                @media (max-width: $screen-lg-max) {
                    span {
                        margin: 0px 50px;
                        width: 100px;
                    }
                }
                @media (max-width: $screen-sm-max) {
                    span {
                        display: none;
                    }
                }
            }
            &:before,
            &:after {
                width: calc(50% - 20px);
            }
            &.icon:before,
            &.icon:after {
                display: none;
            }
            &[area-selected=true] a {
                opacity: 1;
                i {
                    background: $color-primary !important;
                }
                span {
                    color: $color-primary;
                }
            }
        }
        .oneStep.disabled {
            a {
                cursor: default;
                i {
                    background: #f5f5f5;
                    color: #fff;
                }
                span {
                    color: #ccc;
                }
                &:hover {
                    opacity: 1;
                }
            }
        }
    }
    @media (min-width: $screen-md-min) {
        .boxStatusStep {
            padding-top: 20px;
        }
    }
    @media (max-width: $screen-sm-max) {
        .boxStatusStep {
            .oneStep[area-selected=true]:before {
                display: block;
                content: '';
                border-top: 0px;
                position: absolute;
                left: 0px;
                top: -1px;
                width: 100%;
                height: 57px;
                background: $color-primary;
                transform: matrix(1, 0, -0.17364, 0.9848, 0, 0);
            }
        }
        .boxActionForm {
            margin: 0px 20px;
            .boxActionRight,
            .boxActionLeft {
                float: none;
            }
            .boxActionRight {
                button {
                    width: 48%;
                }
                button:first-child {
                    float: left;
                }
                button:last-child {
                    float: right;
                }
                margin-bottom: 20px;
            }
            .boxActionLeft {
                button {
                    width: 100%;
                    margin: 5px 0px;
                }
            }
        }
    }
    .boxDetailStatusStep {
        background: $color-primary;
        .btnNextStep {
            right: 0px;
            top: 4px;
            line-height: 60px;
            width: 100px;
            text-align: right;
            padding-right: 5px;
        }
        .btnBackStep {
            left: 0px;
            top: 4px;
            line-height: 60px;
            width: 100px;
            text-align: left;
            padding-left: 5px;
        }
    }
    .boxActionForm {
        &.style2 {
            text-align: center;
            .prev {
                float: left;
            }
            .next {
                float: right;
            }
        }
        @media (max-width: $screen-sm-max) {
            &.style2 {
                button {
                    width: 100%;
                    margin: 5px 0px;
                }
                .prev {
                    width: 48%;
                    margin-bottom: 20px;
                }
                .next {
                    width: 48%;
                    margin-bottom: 20px;
                }
            }
        }
    }
    .boxListStepStyle1 {
        display: table;
        width: 100%;
        text-align: center;
        height: 70px;
    }
    .boxListStepStyle1 .oneStep {
        display: table-cell;
        cursor: pointer;
        position: relative;
        padding: 0px 20px;
        height: 75px;
        white-space: nowrap;
        line-height: 75px;
        font-size: 24px;
        color: #666;
    }
    .boxListStepStyle1 .oneStep:before {
        display: block;
        content: '';
        width: 1px;
        height: 33px;
        background: #ddd;
        position: absolute;
        left: 0px;
        top: 23px;
    }
    .boxListStepStyle1 .oneStep:first-child::before {
        display: none;
    }
    .boxListStepStyle1 .oneStep:hover,
    .boxListStepStyle1 .oneStep.action {
        text-decoration: none;
        color: #1484C6;
    }
    .boxListStepStyle1 .oneStep.action:after {
        display: block;
        content: '';
        width: 27px;
        height: 13px;
        position: absolute;
        left: 50%;
        bottom: 0px;
        margin-left: -14px;
        overflow: hidden;
        background: url(../img/icon/tabActionStyle2.png) no-repeat left top;
    }
    // step hover
    .boxStatusStep .oneStep a:hover i {
        background: #aaa;
    }
    .boxStatusStep .oneStep a:hover span {
        color: #333;
    }
    .boxStatusStep .oneStep.disabled a:hover i {
        background: #f5f5f5;
        color: #fff;
    }
    .boxStatusStep .oneStep.disabled a span {
        color: #ccc;
    }
}