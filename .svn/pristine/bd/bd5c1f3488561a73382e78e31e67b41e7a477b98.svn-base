signal {
    position: relative;
    div {
        width: 5px;
        height: 30px;
        background-color: #dedede;
        display: inline-block;
        margin-top: -2px;
        margin-left: -1px;
        margin-right: -1px;
        border-radius: 3px;
    }
    div.active {
        background-color: $color-primary;
    }
    div:nth-child(1) {
        height: 10px;
    }
    div:nth-child(2) {
        height: 15px;
    }
    div:nth-child(3) {
        height: 20px;
    }
    div:nth-child(4) {
        height: 25px;
    }
    div:nth-child(5) {
        height: 30px;
    }
    i {
        color: $color-danger;
        position: absolute;
        bottom: -5px;
        left: -5px;
        font-size: $font-sm;
        display: none;
    }
    i.active {
        display: block;
    }
}