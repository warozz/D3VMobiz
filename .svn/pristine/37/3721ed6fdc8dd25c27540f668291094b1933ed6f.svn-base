progress-bar {
    transform: matrix(1, 0, -0.17364, 0.9848, 0, 0);
    display: block;
    .progress {
        height: 40px;
        margin-bottom: 20px;
        overflow: hidden;
        background-color: #f5f5f5;
        -webkit-box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        font-size: $font-md;
        overflow-x: hidden;
        .progress-bar {
            float: left;
            width: 0;
            height: 100%;
            font-size: $font-md;
            line-height: 40px;
            color: #fff;
            text-align: center;
            background: $color-primary;
            -webkit-box-shadow: inset 0 -1px 0 rgba(0, 0, 0, .15);
            box-shadow: inset 0 -1px 0 rgba(0, 0, 0, .15);
            -webkit-transition: width .6s ease;
            -o-transition: width .6s ease;
            transition: width .6s ease;
            span {
                display: block;
                transform: matrix(1, 0, 0.17364, 1, 0, 0);
            }
            &.progress-bar-wave {
                background: linear-gradient(79deg, #007ac2 45%, #2cbeff 50%, #007ac2 55%);
                background-size: 600% 600%;
                -webkit-animation: gradient-wave 6s ease infinite;
                animation: gradient-wave 6s ease infinite;
            }
        }
    }
    @keyframes gradient-wave {
        0% {
            background-position: 100% 50%
        }
        100% {
            background-position: 0% 50%
        }
    }
}