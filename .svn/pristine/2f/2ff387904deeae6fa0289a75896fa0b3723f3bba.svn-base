        h1 {
            height: 36px;
            padding: 3px 12px;
        }
        .mat-button-wrapper::before {
            margin-top: -4px;
        }
    }*/
    .occupation {
        padding-top: 15px;
    }
    tabs {
        .boxListTabStyle1 {
            .oneTab {
                display: inline-block;
                cursor: pointer;
                position: relative;
                padding: 0px 20px;
                height: 75px;
                white-space: nowrap;
                line-height: 75px;
                font-size: 25px;
            }
        }
    }
    .inline_block {
        dropdown {
            .boxSelectPlan {
                margin-bottom: 0px;
            }
        }
    }
    .w120 {
        width: 120px;
    }
    .inline_block {
        // dropdown {
        //     position: relative;
        //     top: 12px;
        // }
    }
    .mw270 {
        max-width: 270px;
        width: 100%;
    }
    // เฉพาะบุตร ธิดา ulink
    prefix-name {
        &.child-0 {
            .boxSearchPlanInsurance .boxSelectPlan {
                z-index: 5;
            }
        }
        &.child-1 {
            .boxSearchPlanInsurance .boxSelectPlan {
                z-index: 4;
            }
        }
        &.child-2 {
            .boxSearchPlanInsurance .boxSelectPlan {
                z-index: 3;
            }
        }
        &.child-3 {
            .boxSearchPlanInsurance .boxSelectPlan {
                z-index: 2;
            }
        }
    }
}