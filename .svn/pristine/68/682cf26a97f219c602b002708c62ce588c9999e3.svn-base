<div class="modal">
    <i class="close" (click)="close()"></i>
    <h1 class="modal-title">ส่งอีเมล</h1>
    <div class="popup popup-style1">
        <div class="boxNewUpdate">
            <div class="scrollbar-inner">
                <form class="form-horizontal">
                    <div class="form-group col-xs-12 col-sm-12">
                        <label class="col-xs-12 col-sm-3 control-label c-blue">ชื่อผู้ส่ง</label>
                        <div class="col-xs-12 col-sm-9">
                            <input class="form-control" name="name_txt" [(ngModel)]="senderName">
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-12">
                        <label class="col-xs-12 col-sm-3 control-label c-blue">จาก </label>
                        <div class="col-xs-12 col-sm-9">
                            <input class="form-control" name="email_from_txt" [(ngModel)]="senderEmail">
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-12">
                        <label class="col-xs-12 col-sm-3 control-label c-blue">ถึง </label>
                        <div class="col-sx-12 col-sm-9">
                            <input class="form-control" name="email_to_txt" [(ngModel)]="receiver">
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-12">
                        <label class="col-xs-12 col-sm-3 control-label c-blue">สำเนาถึง </label>
                        <div class="col-sx-12 col-sm-9">
                            <input class="form-control" name="email_cc_txt" [(ngModel)]="receiverCC">
                        </div>
                    </div>
                    <div class="form-group col-xs-12 col-sm-12">
                        <label class="col-xs-12 col-sm-3 control-label c-blue">ชื่อเรื่อง </label>
                        <div class="col-sx-12 col-sm-9 pading-txt">
                            <input class="form-control" name="subject_txt" [(ngModel)]="emailTitle">
                        </div>
                    </div>
                    <div class="form-group col-xs-12">
                        <label class="col-xs-12 col-sm-3 control-label c-blue">ข้อความ </label>
                        <div class="col-xs-12 col-sm-9 pading-txt">
                            <textarea class="form-control" name="message_txt" [(ngModel)]="emailContent" rows="3"></textarea>
                        </div>
                    </div>
                </form>
                <div class="boxActionForm txt-center">
                    <a class="btn-style4 btn-style-m pdlr20" (click)="submit();">
                        <span>
              <i class="icon-message-closed-envelope"></i> ส่งอีเมล</span>
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>