<div style="display: block">
    <canvas baseChart
                [data]="data"
                [labels]="label"
                [colors]="color"
                [chartType]="pieChartType"
                [options]="option"
                (chartHover)="chartHovered($event)"
                (chartClick)="chartClicked($event)" *ngIf="data"></canvas>
  </div>