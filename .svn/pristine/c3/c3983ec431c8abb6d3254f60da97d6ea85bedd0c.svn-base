<div class="boxTableStyle1 boxSearchHospitalTable">
    <table>
        <thead>
            <tr>
                <th>ลำดับ</th>
                <th>แบบประกัน</th>
                <th>ลบ</th>
            </tr>
        </thead>
        <tbody>
            <tr *ngFor="let item of data ; let i = index" [attr.data-index]="i">
                <td class="txt-center">
                    <div class="view-only-xs">ลำดับที่ {{i+1}}</div>
                    <div class="hide-only-xs">{{i+1}}</div>
                </td>
                <td>{{item.planName}}</td>
                <td class="txt-center">
                    <div class="visible-xs-block float-xs-left c-blue">ลบแบบประกัน</div>
                    <div class="float-xs-right txt-xs-center">
                        <a class="btnPop" href="javascript:void(0)" (click)="deletePlanCode(item.planCode)">
                            <i class="icon-rubbish-bin"></i>
                        </a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>