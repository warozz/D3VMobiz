condition-signature {
    .danger{
        color: $color-danger;
        width: 75%;
        margin: 0px auto;
    }

    .text-indent{
        text-indent: 50px;
    }

    .popup-style1 {
        height: 100%;
        width: 100%;
        border-radius: 0px;
        .boxNewUpdate {
            margin: 0px;
            height: 100%;
            padding-bottom: 50px;
            .scrollbar-inner {
                height: 100%;
            }
        }
    }

    .item-checkbox{
        width: fit-content;
        margin-left: auto;
        margin-right: auto;
    }

    .item.item-md .checkbox-md{
        margin-right: 15px;
    }

    .c-blue{
        font-size: $font-xl;
    }

    .scroll-content{
        overflow: hidden;
    }
    .padding-r20{
        padding-right: 20px;
    }

    .item-md.item-block .item-inner{
        border-bottom: 0px;
    }
}
