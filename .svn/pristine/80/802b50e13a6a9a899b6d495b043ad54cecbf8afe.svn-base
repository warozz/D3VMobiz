popup-lost-connection {
    @media only screen and (min-height: 600px) and (min-width: 768px) {
        @at-root .lost-connection {
            .modal-wrapper {
                left: calc(50% - (550px/2));
                top: calc(50% - (275px/2));
                width: 550px;
                height: 275px;
            }
        }
    }
    .popup-style1 {
        height: 100%;
        width: 100%;
        border-radius: 0px;
        margin-top: 15px;
        p,
        ol {
            margin: 10px 0px;
        }
    }
}